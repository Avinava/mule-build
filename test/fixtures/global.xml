<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:http="http://www.mulesoft.org/schema/mule/http"
      xmlns:secure-properties="http://www.mulesoft.org/schema/mule/secure-properties">

    <!-- Secure Properties Configuration -->
    <secure-properties:config name="Secure_Properties_Config" 
                               file="${env}.yaml" 
                               key="${secure.key}">
        <secure-properties:encrypt algorithm="Blowfish"/>
    </secure-properties:config>

    <!-- HTTP Listener Configuration -->
    <http:listener-config name="HTTP_Listener_config">
        <http:listener-connection host="0.0.0.0" port="${http.port}"/>
    </http:listener-config>

    <!-- Database Configuration with secure properties -->
    <db:config name="Database_Config">
        <db:my-sql-connection 
            host="${db.host}"
            port="${db.port}"
            user="${secure::db.username}"
            password="${secure::db.password}"
            database="${db.name}"/>
    </db:config>

    <!-- Salesforce Configuration -->
    <salesforce:config name="Salesforce_Config">
        <salesforce:basic-connection 
            username="${secure::salesforce.username}"
            password="${secure::salesforce.password}"
            securityToken="${secure::salesforce.token}"/>
    </salesforce:config>

    <!-- Comment: This is a test file -->
</mule>
